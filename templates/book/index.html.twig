{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Language</th>
                <th>Author</th>
                <th>EditionYear</th>
                <th>TotalPages</th>
                <th>Editor</th>
                <th>Isbn</th>
                <th>Shape</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.category }}</td>
                <td>{{ book.language }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.editionYear }}</td>
                <td>{{ book.totalPages }}</td>
                <td>{{ book.editor }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.shape }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
